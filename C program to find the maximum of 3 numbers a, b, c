#include <stdio.h>

int main() {
    float a, b, c, max;

    // Input the three numbers
    printf("Enter the first number (a): ");
    scanf("%f", &a);
    printf("Enter the second number (b): ");
    scanf("%f", &b);
    printf("Enter the third number (c): ");
    scanf("%f", &c);

    // Find the maximum number
    max = a; // Assume a is the maximum

    if (b > max) {
        max = b; // Update max if b is greater than the current max
    }
    if (c > max) {
        max = c; // Update max if c is greater than the current max
    }

    // Output the maximum number
    printf("The maximum of %.2f, %.2f, and %.2f is %.2f\n", a, b, c, max);

    return 0;
}
